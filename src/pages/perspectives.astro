---
import BlogPost from '../components/BlogPost.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "BASE1 Perspectives";

---

<BaseLayout pageTitle={pageTitle}>
	<h2>What's on our mind?</h2>
	<p>We never stop thinking of ways to solve challenges, reduce costs, and improve enterprise commerce experiences.</p>

	{allPosts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
</BaseLayout>

---
import { getCollection } from "astro:content";
import BlogPost from "../../components/BlogPost.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
type Props = { posts: any[] };

export const getStaticPaths: () => Promise<{ params: { tag: string}, props: Props}[]> = async () => {
    const allPosts = await getCollection('posts');
    const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

    return uniqueTags.map((tag) => { 
        const filteredPosts = allPosts.filter((post) => post.data.tags?.includes(tag));
        return { params: { tag }, props: { posts: filteredPosts } };
    });
}

const { tag } = Astro.params;
const { posts }: Props = Astro.props;
---

<BaseLayout pageTitle={tag}>
    <p>Posts tagged with {tag}</p>
    {posts.map((post) => <BlogPost url={`/perspectives/${post.slug}`} title={post.data.title} />)}
</BaseLayout>